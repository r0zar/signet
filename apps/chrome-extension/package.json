{
  "name": "chrome-extension",
  "displayName": "Clerk Chrome Extension Demo",
  "version": "0.0.1",
  "description": "A feature rich implementation of Clerk with a Plasmo-based Chrome Extension.",
  "author": "Clerk",
  "scripts": {
    "build": "plasmo build",
    "build:firefox": "plasmo build --target=firefox-mv2",
    "debug": "plasmo dev --verbose",
    "debug:firefox": "plasmo dev --target=firefox-mv2 --verbose",
    "dev": "plasmo dev",
    "dev:firefox": "plasmo dev --target=firefox-mv2",
    "package": "plasmo package",
    "package:firefox": "plasmo package --target=firefox-mv2",
    "start:firefox": "web-ext run --source-dir ./build/firefox-mv2-dev"
  },
  "dependencies": {
    "@clerk/chrome-extension": "^2.0.0",
    "@plasmohq/messaging": "^0.7.1",
    "@plasmohq/storage": "^1.9.0",
    "@radix-ui/react-slot": "^1.1.0",
    "@react-spring/three": "^9.7.5",
    "@react-three/fiber": "^9.0.4",
    "@stacks/connect": "^8.1.4",
    "@stacks/network": "^7.0.2",
    "@stacks/transactions": "^7.0.4",
    "@stacks/wallet-sdk": "^7.0.4",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "framer-motion": "^12.4.10",
    "nanoid": "5.1.3",
    "plasmo": "^0.89.4",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-router-dom": "^6.28.0",
    "signet-sdk": "workspace:*",
    "tailwind-merge": "^2.5.4",
    "tailwindcss": "3.4.1",
    "tailwindcss-animate": "^1.0.7",
    "three": "^0.174.0",
    "webextension-polyfill": "^0.12.0"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@types/chrome": "0.0.258",
    "@types/node": "20.11.5",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "@types/webextension-polyfill": "^0.10.7",
    "postcss": "8.4.33",
    "prettier": "3.2.4",
    "typescript": "5.3.3"
  },
  "manifest": {
    "permissions": [
      "cookies",
      "storage",
      "scripting",
      "activeTab"
    ],
    "host_permissions": [
      "$CLERK_FRONTEND_API/*",
      "$PLASMO_PUBLIC_CLERK_SYNC_HOST/*",
      "https://trusted-app-1.com/*",
      "https://trusted-app-2.com/*",
      "http://localhost:*/*",
      "<all_urls>"
    ],
    "key": "$CRX_PUBLIC_KEY",
    "content_security_policy": {
      "extension_pages": "script-src 'self'; object-src 'self'",
      "sandbox": "sandbox allow-scripts allow-forms allow-popups allow-modals; script-src 'unsafe-inline' 'unsafe-eval'; child-src 'self'"
    }
  }
}